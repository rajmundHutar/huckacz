{block header}
    <!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="fill" style="background-image:url('{$baseUri}/images/titleCarousel/carousel1.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Hučka aneb festival&hellip;</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('{$baseUri}/images/titleCarousel/carousel2.jpg');"></div>
                <div class="carousel-caption">
                    <h2>&hellip;na prknech, jež znamenají svět&hellip;</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('{$baseUri}/images/titleCarousel/carousel3.jpg');"></div>
                <div class="carousel-caption">
                    <h2>&hellip;kde diváci jsou herci a herci diváky.</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>
{/block}

{block content}
    <!--
    <div class="row">
        <div class="col-md-12 text-justify">
            <h3>Drazí Hučkaři</h3>

            <h2>Hučka 2016 bude!</h2>

